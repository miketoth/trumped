{
  "name": "Trumped",
  "manifest_version": 2,
  "version": "1.0",

  "description": "Places a proper Trump noun in front of everything",

  "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
  },

  "browser_action": {
    "default_icon": "img/icon.png"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*",
                  "https://*/*"],
      "js": [
        "js/nlp_compromise.min.js",
        "js/contentscript.js"
      ],

      "css": [
        "css/contentscript.css"
      ],
      
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": [ "js/background.js" ]
  },

  "permissions": [
    "storage",
    "contextMenus"
  ],

  "web_accessible_resources": [
    "img/*"
  ]
}
